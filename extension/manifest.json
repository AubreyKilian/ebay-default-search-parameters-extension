{
  "manifest_version": 2,

  "name": "Home country search for eBay",
  "description": "This extension sets the item location option in eBay search to home country only.",
  "version": "1.0",
  "icons": {
            "16":  "icons/main/icon-16.png",
            "19":  "icons/main/icon-19.png",
            "24":  "icons/main/icon-24.png",
            "32":  "icons/main/icon-32.png",
            "48":  "icons/main/icon-48.png",
            "128": "icons/main/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
            "16":  "icons/main/icon-16.png",
            "19":  "icons/main/icon-19.png",
            "24":  "icons/main/icon-24.png",
            "32":  "icons/main/icon-32.png",
            "48":  "icons/main/icon-48.png",
            "128": "icons/main/icon-128.png"
    },
    "default_popup": "options/options.html"
  },
  "background": {
    "scripts": ["constants/constants.js","main/eventPage.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab", 
    "webNavigation",
    "tabs", 
    "storage", 
    "http://*/*",
    "https://*/*"
  ],
  "incognito": "split",
  "minimum_chrome_version" : "22"
}