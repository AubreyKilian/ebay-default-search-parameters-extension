{
  "manifest_version": 2,

  "name": "Ebay home only",
  "description": "This extension sets the default ebay search to home country only.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Ebay home only"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs", 
    "http://*/",
    "https://*/",
    "https://ajax.googleapis.com/"
  ]
}