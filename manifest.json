{
  "manifest_version": 2,

  "name": "Ebay home only",
  "description": "This extension sets the default ebay search to home country only.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
            "19": "icons/ebay-hom-search-map-19.png",
            "24": "icons/ebay-hom-search-map-24.png",
            "32": "icons/ebay-hom-search-map-32.png"
    },
    "default_popup": "options/options.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "incognito": "split",
  "minimum_chrome_version" : "22"
}